<h3>支出一览表</h3>

<table class='table'>
  <thead>
    <tr>
      <th>分类</th>
      <th>金额（元）</th>
      <th>日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category.name %></td>
        <td><%= item.money %></td>
        <td><%= item.date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

